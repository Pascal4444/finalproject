<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="fr.doranco.entity.User" table="utilisateur">
		<id name="id" type="java.lang.Integer">
			<column name="id" sql-type="int(11)"></column>
			<generator class="increment"></generator>
		</id>
		<property name="nom" type="java.lang.String">
			<column name="nom" sql-type="varchar(45)"></column>
		</property>
		<property name="prenom" type="java.lang.String">
			<column name="prenom" sql-type="varchar(45)"></column>
		</property>
		<property name="dateDeNaissance" type="java.util.Date">
			<column name="date_naissance" sql-type="java.sql.Date"></column>
		</property>
		<property name="dateDeNaissance" type="java.util.Date">
			<column name="isactif" sql-type="ENUM('true','false')"></column>
		</property>
		<property name="nom" type="java.lang.String">
			<column name="profil" sql-type="varchar(45)"></column>
		</property>
		<property name="nom" type="java.lang.String">
			<column name="email" sql-type="varchar(45)"></column>
		</property>
		<property name="nom" type="java.lang.String">
			<column name="password" sql-type="BLOB"></column>
		</property>
		<property name="nom" type="java.lang.String">
			<column name="telephone" sql-type="varchar(12)"></column>
		</property>
		<property name="nom" type="java.lang.String">
			<column name="adresses_default" sql-type="int(11)"></column>
		</property>
		<property name="nom" type="java.lang.String">
			<column name="cartes_de_paiement" sql-type="int(11)"></column>
		</property>
		<property name="nom" type="java.lang.String">
			<column name="commentaires" sql-type="varchar(45)"></column>
		</property>
		<one-to-one name="adresse" class="fr.doranco.entity.Adresse"
					foreign-key="user_id" constrained="true" cascade="all">
		</one-to-one>
	</class>

</hibernate-mapping>