<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="fr.doranco.entity.Personne" table="personne">
		<id name="id" type="java.lang.Integer">
			<column name="id" sql-type="int(11)"></column>
			<generator class="increment"></generator>
		</id>
		<property name="nom" type="java.lang.String">
			<column name="nom" sql-type="varchar(25)"></column>
		</property>
		<property name="prenom" type="java.lang.String">
			<column name="prenom" sql-type="varchar(25)"></column>
		</property>
		<property name="dateDeNaissance" type="java.util.Date">
			<column name="date_naissance" sql-type="java.sql.Date"></column>
		</property>
		<one-to-one name="adresse" class="fr.doranco.entity.Adresse"
					foreign-key="personne_id" constrained="true" cascade="all">
		</one-to-one>
	</class>

</hibernate-mapping>