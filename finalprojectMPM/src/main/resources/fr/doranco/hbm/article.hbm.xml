<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="fr.doranco.eboutique.entity.Article" table="article">
		<id name="id" type="java.lang.Integer">
			<column name="id" sql-type="int(11)"></column>
			<generator class="increment"></generator>
		</id>
		<property name="nom" type="java.lang.String">
			<column name="nom" sql-type="varchar(30)"></column>
		</property>
		<property name="description" type="java.lang.String">
			<column name="description" sql-type="varchar(500)"></column>
		</property>
		<property name="prix" type="java.lang.Float">
			<column name="prix" sql-type="FLOAT"></column>
		</property>
		<property name="remise" type="java.lang.Float">
			<column name="remise" sql-type="FLOAT"></column>
		</property>
		<property name="stock" type="java.lang.Integer">
			<column name="stock" sql-type="int(10)"></column>
		</property>
		<property name="isVendable" type="java.lang.Boolean">
			<column name="is_salable" sql-type="enum('true','false')"></column>
		</property>
		<property name="ville" type="java.lang.String">
			<column name="ville" sql-type="varchar(20)"></column>
		</property>
		<property name="codePostal" type="java.lang.String">
			<column name="code_postal" sql-type="varchar(5)"></column>
		</property>

	</class>

</hibernate-mapping>